# Server Configuration
PORT=3001

# Database Configuration
# For local MongoDB:
DB_URL=mongodb://localhost:27017/call-app
# For MongoDB Atlas (replace with your connection string):
# DB_URL=mongodb+srv://username:password@cluster.mongodb.net/call-app?retryWrites=true&w=majority

# JWT Configuration
# Generate a strong random secret for production
API_SECRET=your-super-secret-jwt-key-change-this-in-production

# Message Encryption Configuration (AES-128)
# MUST be exactly 16 characters for AES-128
# Generate using: node -e "console.log(require('crypto').randomBytes(16).toString('hex').substring(0, 16))"
ENCRYPTION_KEY=your16charkey123

# Web Push Notifications (VAPID Keys)
# Generate using: npx web-push generate-vapid-keys
WEB_PUSH_PUBLIC_KEY=your-public-vapid-key-here
WEB_PUSH_PRIVATE_KEY=your-private-vapid-key-here

# Group Management Configuration (Optional - defaults provided)
# Maximum number of members per group (default: 100)
MAX_GROUP_MEMBERS_DEFAULT=100

# Hours to wait before rejoining a private group after leaving (default: 48)
COOLDOWN_PERIOD_HOURS=48

# Maximum message length in characters (default: 5000)
MAX_MESSAGE_LENGTH=5000

# Logging Configuration
# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# ============================================
# SETUP INSTRUCTIONS
# ============================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Update all values with your actual configuration
# 3. Generate encryption key: node -e "console.log(require('crypto').randomBytes(16).toString('hex').substring(0, 16))"
# 4. Generate VAPID keys: npx web-push generate-vapid-keys
# 5. Never commit .env to version control
# ============================================
